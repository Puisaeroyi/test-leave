# Django Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECRET_KEY: Generate a secure random key for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG: Set to False in production
# Security warning: Debug mode exposes detailed error pages and configuration
DJANGO_DEBUG=True

# ALLOWED_HOSTS: Comma-separated list of valid hostnames
# Include all domains that will serve the application
# Development example: localhost,127.0.0.1,::1
# Production example: example.com,api.example.com,www.example.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL database URL
# Format: postgresql://user:password@host:port/database_name
# Docker example: postgresql://postgres:postgres@db:5432/leave_management
# Local example: postgresql://postgres:postgres@localhost:5432/leave_management
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/leave_management

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# CORS_ALLOWED_ORIGINS: Frontend URLs allowed to make API requests
# Comma-separated list with full URLs including protocol and port
# Development example: http://localhost:5173,http://127.0.0.1:5173
# Production example: https://example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================================================
# JWT CONFIGURATION (Optional - overrides defaults)
# ============================================================================

# JWT signing key (defaults to DJANGO_SECRET_KEY if not set)
# JWT_SECRET_KEY=your-jwt-secret-key

# JWT token lifetime in seconds (default: 3600 = 1 hour)
# JWT_ACCESS_TOKEN_LIFETIME=3600

# JWT refresh token lifetime in seconds (default: 604800 = 7 days)
# JWT_REFRESH_TOKEN_LIFETIME=604800

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================

# HSTS (HTTP Strict Transport Security) - Forces HTTPS
# Set to 0 to disable, 31536000 for 1 year (recommended for production)
# SECURE_HSTS_SECONDS=31536000

# SSL redirect - Forces HTTP to HTTPS redirect in production
# SECURE_SSL_REDIRECT=True

# Proxy SSL header - Set if behind reverse proxy (nginx, AWS ELB, etc.)
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================

# Email backend for sending notifications
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
