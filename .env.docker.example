# Docker Environment Configuration
# Copy this file to .env.docker and update with your values

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECRET_KEY: Generate a secure random key
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
# IMPORTANT: Change this for production deployments!
DJANGO_SECRET_KEY=dev-only-secret-key-change-in-production

# DEBUG: Set to False for production
DJANGO_DEBUG=True

# ALLOWED_HOSTS: Include Docker service names and localhost
# For Docker development: localhost,backend,127.0.0.1
# For production: your-domain.com,api.your-domain.com
DJANGO_ALLOWED_HOSTS=localhost,backend,127.0.0.1

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Frontend URLs allowed to make API requests
# Docker development uses frontend service name
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL configured in docker-compose.yml
# Uses Docker service name 'db' as hostname
# DATABASE_URL=postgresql://postgres:postgres@db:5432/leave_management

# ============================================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================================

# Google OAuth 2.0 Client ID for Sign-In
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ============================================================================
# DJANGO SETTINGS
# ============================================================================

# Django settings module path
# Note: docker-compose.yml sets this, but can override here if needed
# DJANGO_SETTINGS_MODULE=backend.settings

# ============================================================================
# NOTES
# ============================================================================

# This file is used by docker-compose.yml (env_file directive)
# Database URL is set in docker-compose.yml to use Docker networking
# For production, create .env.docker.production with secure values

# ============================================================================
# USER IMPORT SETTINGS
# ============================================================================

# Default password for bulk-imported users (required)
# Users must change this on first login
DEFAULT_IMPORT_PASSWORD=
